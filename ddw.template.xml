<?xml version="1.0" encoding="utf-8"?>
<CodeTemplates version="3.0">
  <CodeTemplate version="2.0">
    <Header>
      <_Group>Custom</_Group>
      <Version />
      <MimeType>text/x-csharp</MimeType>
      <Shortcut>ddw</Shortcut>
      <_Description>Debug writeline with args</_Description>
      <TemplateType>Expansion</TemplateType>
    </Header>
    <Variables>
      <Variable name="CurrentMethod">
        <Default>ThisMethod</Default>
      </Variable>
    </Variables>
    <Code><![CDATA[Debug.WriteLine($$"**** {this.GetType().Name}.{nameof($CurrentMethod$)}:  $end$");]]></Code>
  </CodeTemplate>
</CodeTemplates>